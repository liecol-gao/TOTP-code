page {
  background-color: #181717;
  height: 100%;
}

.notification {
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.notification-title {
  color: #ffffff;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.notification-text {
  color: #ffffff;
  font-size: 26rpx;
  line-height: 1.5; /* 增加行间距 */
  margin-bottom: 20rpx;
}

.share-button {
  background-color: #3273DC;
  color: white;
  padding: 12rpx 20rpx;
  font-size: 30rpx;
  border-radius: 5rpx;
  border: none;
  width: 100%;
  text-align: center;
  margin-top: 50rpx;
}

/* 底部固定导航栏 */
.bottom-nav {
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #1f1e1e;
  padding: 10rpx 0;
  box-shadow: 0 -2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.bottom-nav .nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.33%;
  height: 110rpx;
  padding: 10rpx 0;
}

.bottom-nav .icon {
  width: 66rpx;
  height: 66rpx;
  margin-bottom: 5rpx;
}