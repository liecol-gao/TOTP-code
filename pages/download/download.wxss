/* 页面背景 */
page {
  background-color: #181717; /* 更深的黑色，适合黑色系 */
  display: flex;
  flex-direction: column; /* 垂直排列元素 */
  justify-content: center; /* 垂直方向居中 */
  align-items: center; /* 水平方向居中 */
}

/* 提示信息样式 */
.notification {
  background-color: #2a2a2a; /* 深色背景 */
  padding: 15rpx; /* 内边距 */
  border-radius: 5rpx; /* 圆角 */
  width: 100%; /* 限制宽度 */
  margin-bottom: 20rpx; /* 底部间距 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.5); /* 添加阴影 */
}
.notification-text.notice{
  margin-left: 4rpx;
}
.notification-text {
  color: #ffffff; /* 文字颜色 */
  font-size: 26rpx; /* 字体大小 */
  margin-bottom: 18rpx; /* 文本间距 */
  margin-left: 30rpx;
}

/* 主容器样式 */
.container {
  background-color: #2a2a2a; /* 深色背景容器 */
  border-radius: 10rpx; /* 圆角 */
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.5); /* 添加阴影 */
  width: 90%; /* 限制宽度 */
  max-width: 400rpx; /* 最大宽度 */
  margin-top: 20rpx; /* 整体上移 */
}

/* 二维码容器样式 */
.qr-container {
  display: flex;
  flex-direction: column; /* 垂直排列 */
  justify-content: center;
  align-items: center; /* 中心对齐 */
  margin-bottom: 30rpx; /* 增加底部间距 */
  width: 204px;
  /* height: 204px; */
}

.qr-canvas {
  width: 200px;
  height: 200px;
  border: 2px solid #d6d5d5; /* 添加边框 */
  border-radius: 10rpx; /* 圆角边框 */
  background-color: #fff; /* 画布背景色 */
}

.qr-title {
  color: #ffffff; /* 标题文字颜色 */
  margin-top: 10rpx; /* 增加标题与二维码之间的间距 */
  font-size: 24rpx; /* 调整标题字体大小 */
  font-weight: bold; /* 加粗 */
}

/* 按钮组样式 */
.button-group {
  display: flex;
  flex-direction: column; /* 垂直排列按钮 */
  align-items: center; /* 中心对齐 */
  width: 100%; /* 使按钮组占满整个宽度 */
}

.download-button {
  background-color: #3273DC; /* 按钮背景色 */
  color: white; /* 按钮文字颜色 */
  padding: 12rpx 20rpx; /* 增加按钮内边距 */
  font-size: 30rpx; /* 调整字体大小 */
  border-radius: 5rpx; /* 圆角 */
  border: none; /* 移除按钮边框 */
  cursor: pointer; /* 添加鼠标指针 */
  transition: background-color 0.3s, transform 0.2s; /* 添加过渡效果 */
  width: 80%; /* 按钮宽度 */
  margin-bottom: 15rpx; /* 调整按钮之间的间距 */
}

/* 最后一个按钮不需要底部间距 */
.download-button:last-child {
  margin-bottom: 0; 
}

/* 悬停效果 */
.download-button:hover {
  background-color: #2a5b8e; /* 悬停时的背景颜色变化 */
  transform: scale(1.05); /* 悬停时轻微放大 */
}

/* 按下效果 */
.download-button:active {
  background-color: #1d4f74; /* 按下时的背景颜色变化 */
  transform: scale(0.95); /* 按下时轻微缩小 */
}


/* 底部固定导航栏 */
.bottom-nav {
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #1f1e1e;
  padding: 10rpx 0;
  box-shadow: 0 -2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.bottom-nav .nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.33%;
  height: 110rpx;
  padding: 10rpx 0;
}

.bottom-nav .icon {
  width: 66rpx;
  height: 66rpx;
  margin-bottom: 5rpx;
}

